---
const { src, alt = '', reverse = false, className=  '' } = Astro.props;

const flex_direction = reverse ? 'xl:flex-row-reverse' : 'xl:flex-row';
---

<section
  class={`w-screen flex flex-col ${flex_direction} xl:gap-32 xl:justify-center px-16 xl:px-0 gap-8 py-8 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-emerald-900/10 to-transparent ${className}`}
>
  <img
    src={src}
    alt={alt}
    class='rounded-lg xl:max-w-xl h-full border border-emerald-500 xl:sticky top-0'
  />
  <div class='prose prose-emerald prose-invert lg:prose-xl'>
    <slot />
  </div>
</section>
